  const handleClipboard = () => {
    setCopied(true);

    copy(value);

    setTimeout(() => {
      setCopied(false);
    }, 2000);
  };

  return (
    <button
      type="button"
      onClick={handleClipboard}
      className={cn(
        "flex items-center relative w-full border py-2 px-4 cursor-pointer",
        className,
      )}
