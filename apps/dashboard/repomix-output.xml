      await supabase
        .from("bank_accounts")
        .update({ currency, balance })
        .eq("id", bankAccountId);

      const event = await tasks.trigger("import-transactions", {
        filePath,
        bankAccountId,
        currency,
        mappings,
        teamId: teamId!,
        inverted,
      } satisfies ImportTransactionsPayload);

      return event;
